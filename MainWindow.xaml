<Window x:Class="KonyvesProjekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KonyvesProjekt"
        mc:Ignorable="d"
        Title="Mini könyvtár" Height="450" Width="800">
    <Grid Background="AliceBlue">
        <DataGrid x:Name="dg_adatok"  Background="Beige" Margin="10,63,10,10"/>
        <Button  x:Name="btn_beolvas" Content="Adatok beolvasása" HorizontalAlignment="Left" Margin="10,21,0,0" VerticalAlignment="Top" Width="120" Height="25" Click="Button_Click"/>
        <Button x:Name="btn_ujkonyv" Content="Uj könyv" HorizontalAlignment="Left"  Margin="150,21,0,0" VerticalAlignment="Top" Height="25" Width="85" Click="btn_ujkonyv_Click"/>

    </Grid>
</Window>
